.container-fluid
  %h1 Listing productos


  .table_responsive
    %table.table.table-hover.table-striped.sortable-theme-minimal{data: {sortable: ''}}
      %thead
        %tr
          %th{data:{sorted: 'true', sorted_direction: 'ascending' }}
            ID
          %th Codigo
          %th Codigo proveedor
          %th Proveedor
          %th Importado
          %th Categoria
          %th{data:{sortable: 'false'}}

      %tbody
        - @productos.each do |producto|
          %tr
            %td{data:{ entity: 'Producto', action: 'show', id: (producto.id) }}
              = link_to producto.id, '#'

            %td= producto.codigo
            %td= producto.codigo_proveedor
            %td= producto.proveedor
            %td= producto.importado
            %td= producto.categoria
            %td
              = link_to '#', :class => 'btn-sm btn-primary', data: { entity: 'Producto', action: 'edit', id: (producto.id) } do
                %i.fa.fa-edit
                EDIT

  %hr
  %p
    = link_to '#', :class => 'btn btn-success', data: { entity: 'Producto', action: 'new' } do
      %i.fa.fa-plus
        = 'New Producto'
